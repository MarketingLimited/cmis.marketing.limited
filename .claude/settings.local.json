{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "sonnet",
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,

  "permissions": {
    "allow": [
      "Task",
      "Bash",
      "Glob",
      "Grep",
      "Read",
      "Edit",
      "Write",
      "NotebookEdit",
      "WebFetch",
      "TodoWrite",
      "WebSearch",
      "BashOutput",
      "KillShell",
      "Skill",
      "SlashCommand"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf /home/*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(git push origin main:*)",
      "Bash(git push origin master:*)"
    ],
    "ask": [
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(php artisan migrate:fresh:*)",
      "Bash(php artisan db:wipe:*)",
      "Bash(composer remove:*)",
      "Bash(npm uninstall:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "default"
  },

  "sandbox": {
    "enabled": false
  }
}
