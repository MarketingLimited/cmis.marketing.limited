# =============================================================================
# CMIS Configuration
# =============================================================================

# System User (required for automated operations)
CMIS_SYSTEM_USER_ID=00000000-0000-0000-0000-000000000000
CMIS_DEFAULT_ORG_ID=

# Row Level Security
RLS_ENABLED=true
RLS_ENFORCE_CONSOLE=true

# =============================================================================
# Platform API Configurations
# =============================================================================

# -----------------------------------------------------------------------------
# Meta (Facebook & Instagram)
# -----------------------------------------------------------------------------
META_APP_ID=
META_APP_SECRET=
