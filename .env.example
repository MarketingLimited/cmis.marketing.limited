WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# Gemini AI
EMBEDDING_DIMENSION=768
EMBEDDING_BATCH_SIZE=100

# Sync Configuration
SYNC_LOOKBACK_DAYS=30
SYNC_MAX_POSTS=100
SYNC_RETRY_HOURS=24

# Sanctum token expiration in minutes (default: 10080 = 7 days)
SANCTUM_TOKEN_EXPIRATION=10080

# AI rate limiting (requests per minute per user)
AI_RATE_LIMIT=10

# ==============================================================================
# Google Gemini AI Configuration
# ==============================================================================
# Gemini API Key (get from: https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Model Selection by Use Case
# -----------------------------------------------------------------------------
# Text Generation & Content Creation (for social posts, ad copy, etc.)
GEMINI_TEXT_MODEL=gemini-2.5-flash
# Options: gemini-2.5-flash (fast), gemini-2.5-pro (powerful), gemini-3-pro-preview (latest)

# Embeddings & Semantic Search (for knowledge base, RAG)
GEMINI_EMBEDDING_MODEL=text-embedding-004
# Options: text-embedding-004 (recommended)

# Image Generation (for ad creatives, visuals)
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview
# Options: gemini-3-pro-image-preview, gemini-2.5-flash-image


# Video Generation (for video ads, Veo)
GEMINI_VIDEO_MODEL=veo-3.1-fast-generate-preview
# Options: 
#   veo-3.1-fast-generate-preview (latest, fast, recommended)
#   veo-3.1-generate-preview (latest, state-of-the-art, 8s 1080p with audio)
#   veo-3.0-generate-001 (stable production)
#   veo-3.0-fast-generate-001 (stable, fast)

# Generation Parameters
# -----------------------------------------------------------------------------
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Rate Limiting
# -----------------------------------------------------------------------------
GEMINI_RATE_LIMIT=60
GEMINI_RATE_LIMIT_HOUR=500
