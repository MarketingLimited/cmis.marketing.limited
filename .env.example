META_API_VERSION=v19.0
META_RATE_LIMIT=200

# Facebook specific
FACEBOOK_APP_ID="${META_APP_ID}"
FACEBOOK_APP_SECRET="${META_APP_SECRET}"
FACEBOOK_API_VERSION=v19.0
FACEBOOK_RATE_LIMIT=200

# Instagram specific
INSTAGRAM_APP_ID="${META_APP_ID}"
INSTAGRAM_APP_SECRET="${META_APP_SECRET}"
INSTAGRAM_API_VERSION=v19.0
INSTAGRAM_RATE_LIMIT=200

# Meta Ads
META_ADS_API_VERSION=v19.0
META_ADS_RATE_LIMIT=200

# -----------------------------------------------------------------------------
# Google Services
# -----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/integrations/google/callback"

# Google Ads
GOOGLE_ADS_CLIENT_ID="${GOOGLE_CLIENT_ID}"
GOOGLE_ADS_CLIENT_SECRET="${GOOGLE_CLIENT_SECRET}"
